<h1> Projects </h1>
<% unless @projects.empty? %>
<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @projects.each do |project| %>
    <tr>
      <td><strong><%= project.name %></strong></td>
      <td>
        <%= link_to 'Show', project, :class => 'btn'%>
        <%= link_to 'Edit', edit_project_path(project), :class => 'btn'%>
        <%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete, :class => 'btn'%>
      </td>
    </tr>
  <% end %>
</table>
<% else %>
  <h2> It seems you don't have projects yet... </h2>
<% end %>

<br>
<%= link_to 'New Project', new_project_path, :class => 'btn btn-large'%>

